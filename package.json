{
	"name": "pdf-tools",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"packageManager": "pnpm@10.28.1",
	"lint-staged": {
		"*.{ts,js,svelte}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		],
		"*.{json,yaml,yml}": [
			"prettier --write"
		]
	},
	"scripts": {
		"dev": "pnpm --filter @pdf-tools/web dev",
		"build": "pnpm -r build",
		"test": "pnpm -r test",
		"lint": "pnpm -r lint",
		"check": "pnpm --filter @pdf-tools/web run check",
		"type-check": "tsc --noEmit",
		"format": "prettier --write .",
		"format:check": "pnpm --filter @pdf-tools/web run format:check"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^16.5.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0",
		"vitest": "^4.0.15"
	},
	"pnpm": {
		"overrides": {
			"@sveltejs/kit": "2.50.0",
			"eslint": "9.39.2",
			"@typescript-eslint/parser": "8.53.0",
			"@typescript-eslint/eslint-plugin": "8.53.0",
			"eslint-plugin-svelte": "3.14.0",
			"eslint-config-prettier": "10.1.8"
		}
	}
}
